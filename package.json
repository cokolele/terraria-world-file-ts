{
  "name": "terraria-world-file-ts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "build": "tsdown src/index.ts src/platform/node.ts src/platform/browser.ts --format esm,cjs --out-dir dist --dts --clean",
    "build:watch": "tsdown src/index.ts src/platform/node.ts src/platform/browser.ts --format esm,cjs --out-dir dist --dts --clean --watch"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./adapter": {
      "node": {
        "import": {
          "types": "./dist/platform/node.d.mts",
          "default": "./dist/platform/node.mjs"
        },
        "require": {
          "types": "./dist/platform/node.d.ts",
          "default": "./dist/platform/node.js"
        }
      },
      "browser": {
        "import": {
          "types": "./dist/platform/browser.d.mts",
          "default": "./dist/platform/browser.js"
        },
        "require": {
          "types": "./dist/platform/browser.d.ts",
          "default": "./dist/platform/browser.js"
        }
      },
      "default": {
        "import": {
          "types": "./dist/platform/browser.d.mts",
          "default": "./dist/platform/browser.js"
        },
        "require": {
          "types": "./dist/platform/browser.d.ts",
          "default": "./dist/platform/browser.js"
        }
      }
    }
  }
}
